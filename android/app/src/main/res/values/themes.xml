<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Notes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/black</item> <!-- Whatever color you want-->
    </style>

    <style name="Theme.Notes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Authentication.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="android:textColor">@color/grey1</item>
        <item name="android:textSize">@dimen/_11sdp</item>

    </style>
</resources>